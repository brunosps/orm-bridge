{
  "name": "@basesql/root",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-database SQL query builder abstraction for Sequelize and Prisma",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "build": "npm run build:core && npm run build:adapters",
    "build:core": "cd packages/core && npm run build",
    "build:adapters": "cd packages/sequelize && npm run build && cd ../prisma && npm run build",
    "build:sequelize": "npm run build --workspace=packages/sequelize",
    "build:prisma": "npm run build --workspace=packages/prisma",
    "clean": "rm -rf packages/*/dist packages/*/node_modules",
    "clean:dist": "rm -rf packages/*/dist"
  },
  "keywords": [
    "sql",
    "query-builder",
    "sequelize",
    "prisma",
    "pagination",
    "filtering",
    "search"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
